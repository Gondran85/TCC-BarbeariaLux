<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here -->
    </style>

    <!-- Shape appearance overlays -->
    <style name="ShapeAppearanceOverlay.App" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8dp" parent="ShapeAppearanceOverlay.App">
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Circular ImageView for social media icons -->
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Toolbar styles -->
    <style name="ForgotPassword.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <!-- Custom button styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/AmareloPadrao</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/transparent_black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.App.BarberName" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.BarberSpecialty" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="TextAppearance.App.AvailableHours" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/AmareloPadrao</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
