<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".View.ForgotPasswordActivity">

    <!-- Background Image with proper aspect ratio -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/lucid_realism_a_surreal_and_vibrant_cinematic_photo_of_a_barbe_2"
        android:alpha="0.6" />

    <!-- Gradient overlay for better text readability -->
    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_fade_out" />

    <!-- App Bar with Back Button -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@drawable/ico_voltar"
            app:navigationContentDescription="@string/voltar_para_login"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with centered card for tablets -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/windowMinWidthMajor">

            <!-- Content Card for better visual hierarchy on tablets -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/content_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/content_margin_horizontal"
                android:layout_marginVertical="@dimen/content_margin_vertical"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="600dp"
                app:layout_constraintVertical_bias="0.4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/spacing_xl"
                    android:paddingVertical="@dimen/spacing_xxl">

                    <!-- Title with proper hierarchy -->
                    <TextView
                        android:id="@+id/text_title_forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/esqueceu_senha"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_headline_small"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:importantForAccessibility="yes"
                        android:accessibilityHeading="true" />

                    <!-- Description with improved readability -->
                    <TextView
                        android:id="@+id/text_description_forgot_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/digite_email_recuperacao"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_body_large"
                        android:textAlignment="center"
                        android:lineSpacingMultiplier="1.2"
                        android:alpha="0.87" />

                    <!-- Email Input with Material Design TextInputLayout -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xl"
                        android:hint="@string/email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="@color/white"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/white"
                        app:errorEnabled="true"
                        app:errorTextColor="@android:color/holo_red_light">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_email_forgot_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:autofillHints="emailAddress"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_body_large"
                            android:importantForAutofill="yes"
                            android:nextFocusDown="@id/btn_enviar_recuperacao" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Send Button with Material Design Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_enviar_recuperacao"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:text="@string/enviar_recuperacao"
                        android:textColor="@color/AmareloPadrao"
                        android:textSize="@dimen/text_body_large"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:strokeColor="@color/AmareloPadrao"
                        app:strokeWidth="2dp"
                        app:cornerRadius="@dimen/corner_radius_medium"
                        app:rippleColor="@color/AmareloPadrao"
                        android:backgroundTint="@android:color/transparent"
                        android:nextFocusDown="@id/text_voltar_login" />

                    <!-- Back to Login Link -->
                    <TextView
                        android:id="@+id/text_voltar_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_lg"
                        android:text="@string/voltar_para_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_body_medium"
                        android:textStyle="bold"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/spacing_sm"
                        android:minHeight="@dimen/touch_target_size"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:alpha="0.87" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
