<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    android:fitsSystemWindows="true"
    tools:context=".View.SignUpActivity">

    <!-- Guidelines para responsividade em tablets -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_content_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- Imagem de fundo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#151515"
        android:scaleType="centerCrop"
        android:contentDescription="@string/background_image_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lucid_realism_a_surreal_and_vibrant_cinematic_photo_of_a_barbe_21" />

    <!-- Overlay com gradiente -->
    <View
        android:id="@+id/fadeOutOverlay3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_fade_out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card centralizado para o formulário -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lg"
        app:cardBackgroundColor="#AA1A1A1A"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guideline_content_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_content_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/max_form_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xxl">

            <!-- Botão voltar -->
            <ImageView
                android:id="@+id/btnVoltarSignUp"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:layout_gravity="start"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_sm"
                android:contentDescription="@string/back_button_description"
                app:srcCompat="@drawable/ico_voltar" />

            <!-- Título principal -->
            <TextView
                android:id="@+id/txtEsqueceuSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="@string/welcome_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_headline_medium"
                android:textStyle="bold"
                android:accessibilityHeading="true" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                android:text="@string/signup_subtitle"
                android:textAlignment="center"
                android:textColor="@color/on_surface_variant"
                android:textSize="@dimen/text_body_large" />

            <!-- Container dos campos de input -->
            <LinearLayout
                android:id="@+id/inputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Campo Nome -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNome"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="@string/full_name_hint"
                    app:boxBackgroundColor="#33FFFFFF"
                    app:boxStrokeColor="@color/AmareloPadrao"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="@color/AmareloPadrao"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/AmareloPadrao">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textColor="@color/white"
                        android:textColorHint="#CCFFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="@string/email_hint"
                    app:boxBackgroundColor="#33FFFFFF"
                    app:boxStrokeColor="@color/AmareloPadrao"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:hintTextColor="@color/AmareloPadrao"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/AmareloPadrao">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="#CCFFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Senha -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSenha"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:hint="@string/password_hint"
                    app:boxBackgroundColor="#33FFFFFF"
                    app:boxStrokeColor="@color/AmareloPadrao"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/AmareloPadrao"
                    app:hintTextColor="@color/AmareloPadrao"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/AmareloPadrao">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="#CCFFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Confirmar Senha -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmarSenha"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xl"
                    android:hint="@string/confirm_password_hint"
                    app:boxBackgroundColor="#33FFFFFF"
                    app:boxStrokeColor="@color/AmareloPadrao"
                    app:boxStrokeWidth="2dp"
                    app:boxStrokeWidthFocused="3dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/AmareloPadrao"
                    app:hintTextColor="@color/AmareloPadrao"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/AmareloPadrao">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmarSenha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="#CCFFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Botão de inscrição -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncrever"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:background="@drawable/btn_fundo_transparente_borda_amarelo"
                android:text="@string/signup_button"
                android:textColor="@color/AmareloPadrao"
                android:textSize="@dimen/text_body_large"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <!-- Container para texto de login -->
            <LinearLayout
                android:id="@+id/loginContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appCompatTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    android:text="@string/already_have_account"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="@dimen/text_body_medium" />

                <TextView
                    android:id="@+id/txtEntreSuaCinta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_xs"
                    android:text="@string/login_link"
                    android:textColor="@color/AmareloPadrao"
                    android:textSize="@dimen/text_body_medium"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
