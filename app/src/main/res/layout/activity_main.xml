<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".View.MainActivity">

    <!-- App Bar com Material Design -->

    <!-- ScrollView Principal com Nested Scrolling -->

    <ImageView
        android:id="@+id/btnVoltarLogin"
        android:layout_width="47dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Botão voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ico_voltar" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent_black"
        android:elevation="@dimen/elevation_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationContentDescription="@string/voltar_para_login"
        app:navigationIconTint="@color/white"
        app:title="@string/bem_vindo"
        app:titleTextColor="@color/white">

        <!-- Botão de voltar para Home -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVoltarHome"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/spacing_md"
            android:text="Home"
            android:textColor="@color/AmareloPadrao"
            android:visibility="gone"
            app:icon="@drawable/ico_home"
            app:iconTint="@color/AmareloPadrao"
            app:rippleColor="@color/ripple_color" />


    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/transparent_black"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_horizontal"
            android:paddingTop="@dimen/spacing_lg"
            android:paddingBottom="@dimen/spacing_xl">

            <!-- Header de Boas-vindas com Material Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_card"
                app:strokeColor="@color/AmareloPadrao"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_lg">

                    <TextView
                        android:id="@+id/textWelcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/bem_vindo_usuario"
                        android:textAppearance="?attr/textAppearanceHeadlineSmall"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:gravity="center"
                        android:text="@string/subtitulo_barbearia"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/on_surface_variant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Campo de Pesquisa com Material Design -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchInputLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:hint="@string/pesquisar"
                app:boxBackgroundColor="@color/transparent_black"
                app:boxStrokeColor="@color/AmareloPadrao"
                app:hintTextColor="@color/on_surface_variant"
                app:startIconDrawable="@drawable/ico_pesquisar"
                app:startIconTint="@color/AmareloPadrao">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPesquisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/on_surface_variant" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Seção de Imagem Promocional -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/surface"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="@dimen/elevation_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imagePromo"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:contentDescription="@string/imagem_promocional_desc"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/default_artistic_portrait_photography_of_image_is_a_rectangula_1" />

                    <!-- Overlay com gradiente para melhor legibilidade -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/gradient_fade_out"
                        app:layout_constraintBottom_toBottomOf="@+id/imagePromo"
                        app:layout_constraintEnd_toEndOf="@+id/imagePromo"
                        app:layout_constraintStart_toStartOf="@+id/imagePromo"
                        app:layout_constraintTop_toTopOf="@+id/imagePromo" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReserveAgora"
                        style="@style/Widget.Material3.Button.UnelevatedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_lg"
                        android:layout_marginBottom="@dimen/spacing_lg"
                        android:text="@string/reserve_agora"
                        android:textColor="@color/black"
                        app:backgroundTint="@color/AmareloPadrao"
                        app:cornerRadius="@dimen/corner_radius_medium"
                        app:icon="@drawable/ico_favoritos"
                        app:iconTint="@color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/imagePromo"
                        app:layout_constraintStart_toStartOf="@+id/imagePromo"
                        app:rippleColor="@color/ripple_color" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Seção Barbeiros com Material Design -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textBarbeirosTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:text="@string/barbeiros_disponiveis"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBarbeiros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/spacing_md"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_barbeiro" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation com Material Design -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="@dimen/elevation_card"
        app:itemIconTint="@color/AmareloPadrao"
        app:itemTextColor="@color/AmareloPadrao"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/botton_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>